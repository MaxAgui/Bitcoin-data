<%= simple_form_for bitcoin, html: { class: "bitcoin form" } ,data: {
                  controller: "form",
                  target: "form.hashb",
                  action: "turbo:submit-end->form#submitForm:prevent"
              } do |f| %>
  <% if bitcoin.errors.any? %>
    <div class="error-message">
      <%= bitcoin.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :hashb, input_html: { autofocus: true } , placeholder: "bitcoin hash"  %>
  <%= link_to "Cancel", bitcoins_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>